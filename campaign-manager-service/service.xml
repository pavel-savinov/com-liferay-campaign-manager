<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder auto-import-default-references="false" auto-namespace-tables="false" package-path="com.liferay.campaign.manager">
	<namespace>CM</namespace>
	<entity local-service="true" name="Campaign" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="campaignId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="startDate" type="Date" />
		<column name="endDate" type="Date" />
		<column name="status" type="int" />

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>

		<finder name="G_C" return-type="Campaign">
			<finder-column name="groupId" />
			<finder-column name="campaignId" />
		</finder>

		<!-- References -->

		<reference entity="CampaignLocalization" package-path="com.liferay.campaign.manager" />
		<reference entity="Company" package-path="com.liferay.portal" />
		<reference entity="Group" package-path="com.liferay.portal" />
		<reference entity="User" package-path="com.liferay.portal" />
	</entity>

	<entity local-service="false" name="CampaignLocalization" remote-service="false">

		<!-- PK fields -->

		<column name="campaignLocalizationId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />

		<!-- Other fields -->

		<column name="campaignId" type="long" />
		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="languageId" type="String" />

		<finder name="G_C" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="campaignId" />
		</finder>

		<finder name="G_C_L" return-type="CampaignLocalization">
			<finder-column name="groupId" />
			<finder-column name="campaignId" />
			<finder-column name="languageId" />
		</finder>
	</entity>

	<exceptions>
		<exception>InvalidDateRange</exception>
	</exceptions>
</service-builder>